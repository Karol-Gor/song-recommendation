@model IEnumerable<SongRecommendation.Model.SongsDb>


<!-- First Grid -->
<form method="post" asp-action="Create">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Top 10 proponowanych utworów</h2>
            </div>
        </div>
        <br />

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Autor
                        </th>
                        <th>
                            Nazwa
                        </th>
                        <th>
                            Gatunek
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var song in Model)
                    {
                        <tr>
                            <td width="33%">@song.ArtistName</td>
                            <td width="33%">@song.ReleaseName</td>
                            <td width="33%">@song.Terms</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Brak utworów do zrekomendowania</p>
        }

    </div>
</form>



